{
    "manifest_version": 2,
    "name": "Iranian National Code",
    "version": "1.0.0",
    "description": "Simple plugin for generating, validating, identifying Iranian National ID (کد ملی) based on their official checksum & prefix",
    "icons": {
        "16": "icons/icon16.png",
        "24": "icons/icon24.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png",
        "512": "icons/icon512.png"
    },
    "permissions": [],
    "browser_action": {
        "default_icon": "icons/icon128.png",
        "default_popup": "popup.html",
        "default_title": "iranian-national-code-browser-extension"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "iranian-national-code-browser-extension@ashokri.com",
            "strict_min_version": "142.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.mozilla.org/*"
            ],
            "js": [
                "popup.js"
            ],
            "css": [
                "popup.css"
            ]
        }
    ]
}